                  "email": {
                    "type": "string",
                    "example": "user@example.com"
                  },
                  "password": {
                    "type": "string",
                    "example": "mypassword"
                  }
                },
                "required": [
                  "email",
                  "password"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Ein JWT-Token zur Authentifizierung"
          },
          "400": {
            "description": "Fehlende JSON-Anfrage oder fehlender Benutzername oder Passwort"
          },
          "401": {
            "description": "Falscher Benutzername oder Passwort"
          }
